Table Citizens {
  Id varchar(450) [pk]
  Profilepic varbinary(max)
  LastName varchar
  Gender Gender
  Pincode int
  Mandal varchar
  District varchar
  City varchar
  Village varchar
  FirstName varchar(256)
  NormalizedUserName varchar(256)
  Email varchar(256)
  NormalizedEmail varchar(256)
  EmailConfirmed boolean
  PasswordHash varchar
  SecurityStamp varchar
  ConcurrencyStamp varchar
  PhoneNumber varchar
  PhoneNumberConfirmed boolean
  TwoFactorEnabled boolean
  LockoutEnd datetime
  LockoutEnabled boolean
  AccessFailedCount int
}

Enum Gender {
  Male
  Female
}

Table AspNetRoles {
  Id varchar(450) [pk]
  Name varchar(256)
  NormalizedName varchar(256)
  ConcurrencyStamp varchar
}

Table AspNetUserRoles {
  UserId varchar(450) [ref: <> Citizens.Id]
  RoleId varchar(450) [note: "Foreign Key AspNetRoles(Id)"]
}

Table Department {
  DeptId int [pk]
  DeptName varchar
  Description varchar
}

Table PoliceOfficer {
  OfficerId nvarchar(450) [pk, ref: > Citizens.Id]
  OfficerDesignation varchar(100)
  SuperiorId nvarchar(450) [ref: <> PoliceOfficer.OfficerId, null]
  DepartmentId int [ref: > Department.DeptId]
}

Table Service {
  ServiceId int [pk]
  ServiceName varchar
  DeptId int [ref: > Department.DeptId]
  DocsRequires varchar
  ProcessingTime int
  GovFee decimal
  ServiceFee decimal
  Tax decimal
}

Table ServiceApplication {
  ApplicationID int [pk]
  UserID varchar [ref: > Citizens.Id]
  ServiceID int [ref: > Service.ServiceId]
  ServiceName varchar
  ApplicationDate datetime
  Status Status [default: "Pending"]
  OfficerID int [ref: > PoliceOfficer.OfficerId, null]
}

Enum Status {
  Pending
  InProgress
  Completed
  Withdrawn
}

Table Scheme {
  SchemeID int [pk]
  SchemeName varchar
  Details varchar
  Attributes varchar
  ApplicationProcess varchar
  DocsRequired varchar
}

Table Eligibility {
  EligibilityId int [pk]
  SchemeId int [ref: > Scheme.SchemeID]
  Gender varchar [null]
  Age int [null]
  MinAge int [null]
  MaxAge int [null]
  Caste varchar [null]
  IsDifferentlyAbled boolean [null]
  IsStudent boolean [null]
  IsBPL boolean [null]
}

Table Grievances {
  GrievanceID int [pk]
  UserID varchar [ref: > Citizens.Id]
  OfficerId varchar [ref: > PoliceOfficer.OfficerId, null]
  DepartmentID int [ref: > Department.DeptId]
  Title varchar(100)
  Description text
  FilesUploaded byte [null]
  Status Status [default: "Pending"]
  CreatedAt datetime [default: "DateTime.Now()"]
  TimeLine String
}
