Table Citizens {
  Id varchar(450) [pk]
  Profilepic varbinary(max)
  LastName varchar
  Gender Gender 
  Pincode int
  Mandal varchar
  District varchar
  City varchar
  Village varchar
  FirstName varchar(256)
  NormalizedUserName varchar(256)
  Email varchar(256)
  NormalizedEmail varchar(256)
  EmailConfirmed boolean
  PasswordHash varchar
  SecurityStamp varchar
  ConcurrencyStamp varchar
  PhoneNumber varchar
  PhoneNumberConfirmed boolean
  TwoFactorEnabled boolean
  LockoutEnd datetime
  LockoutEnabled boolean
  AccessFailedCount int
}
Enum Gender {
  Male
  Female
}

Table AspNetRoles {
  Id varchar(450) [pk]
  Name varchar(256)
  NormalizedName varchar(256)
  ConcurrencyStamp varchar
}

Table AspNetUserRoles {
  UserId varchar(450) [pk]
  RoleId varchar(450) [pk]
}

Ref: AspNetUserRoles.UserId > Citizens.Id
Ref: AspNetUserRoles.RoleId > AspNetRoles.Id

Table Department {
  DeptId int [pk]      // Primary Key
  DeptName varchar     // Department Name
  Description varchar  // Department Description
}

Table Service {
  ServiceId int [pk]   // Primary Key
  ServiceName varchar  // Name of the service
  DeptId int           // Foreign Key to Department
  DocsRequires varchar // Documents required for the service
  ProcessingTime int  // Processing time in days (nullable)
  GovFee decimal       // Government Fee
  ServiceFee decimal   // Service Fee
  Tax decimal          // Tax Amount

}
 Ref: Service.DeptId > Department.DeptId
Table PoliceOfficer {
  OfficerId nvarchar(450) [pk]  // Primary Key and Foreign Key to Citizen
  OfficerDesignation varchar(100)    // Officer's Designation
  SuperiorId nvarchar(450)  // Foreign Key to Superior (self-referencing)
  DepartmentId int                  // Foreign Key to Department
}
Ref: PoliceOfficer.OfficerId > Citizens.Id
Ref: PoliceOfficer.SuperiorId > PoliceOfficer.OfficerId // Self-referencing relationship for Superior
Ref: PoliceOfficer.DepartmentId > Department.DeptId     // Foreign Key to Department

Table ServiceApplication {
  ApplicationID int [pk]
  UserID varchar
  ServiceID int
  ServiceName varchar
  ApplicationDate datetime
  Status Status [default: "Pending"]
  OfficerID int [null]
}
Enum Status {
  Pending
  InProgress
  Completed
  Withdrawn
}
Ref: ServiceApplication.UserID > Citizens.Id
Ref: ServiceApplication.ServiceID > Service.ServiceId
Ref: ServiceApplication.OfficerID > PoliceOfficer.OfficerId

Table Scheme {
  SchemeID int [pk, increment]  // Auto-incrementing primary key
  SchemeName varchar
  Details varchar
  Attributes varchar
  Eligibility varchar
  ApplicationProcess varchar
  DocsRequired varchar
}

Table Grievances {
  GrievanceID int [pk] // Primary Key
  UserID varchar [ref: > Citizens.Id]
  OfficerId varchar [ref: > PoliceOfficer.OfficerId] // Officer handling the grievance (Nullable, FK to PoliceOfficer)
  DepartmentID int [ref: > Department.DeptId] // Foreign Key to Department
  Title varchar(100) [not null] // Title of the grievance
  Description text [not null] // Description of the grievance
  FilesUploaded byte // File(s) uploaded (Nullable)
  Status Status [default: "Pending"] // Grievance Status
  CreatedAt datetime [default: "DateTime.Now()"] 
  TimeLine String 
}

